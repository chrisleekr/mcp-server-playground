{
  "name": "@chrisleekr/mcp-server-playground",
  "version": "1.1.2",
  "description": "A playground for Model Context Protocol (MCP) server built with TypeScript and Streamable HTTP transport",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "license": "MIT",
  "bin": {
    "mcp-server-playground": "dist/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "prepare": "husky .husky",
    "build": "bun run scripts/build.ts",
    "postbuild": "./scripts/post-build.sh",
    "dev": "bun --watch run src/index.ts | bun run pino-pretty",
    "dev:setup": "./scripts/dev-setup.sh",
    "start": "bun run dist/index.js",
    "typecheck": "bun run tsc --noEmit",
    "lint": "bun run eslint .",
    "lint:fix": "bun run eslint . --fix",
    "format": "bun run prettier --check .",
    "format:fix": "bun run prettier --write .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:inspector": "bunx @modelcontextprotocol/inspector --config ./mcp-config.json --server mcp-server-playground-inspector",
    "docker:build": "docker build -t mcp-server-playground:local . --progress=plain"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "playground",
    "server",
    "anthropic",
    "oauth",
    "auth0"
  ],
  "author": "Chris Lee <git@chrislee.kr>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisleekr/mcp-server-playground.git"
  },
  "bugs": {
    "url": "https://github.com/chrisleekr/mcp-server-playground/issues"
  },
  "homepage": "https://github.com/chrisleekr/mcp-server-playground#readme",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "3.980.0",
    "@aws-sdk/client-cloudwatch-logs": "3.980.0",
    "@aws-sdk/client-ecs": "3.980.0",
    "@aws-sdk/client-s3": "3.980.0",
    "@aws-sdk/credential-provider-node": "3.972.4",
    "@aws-sdk/credential-providers": "3.980.0",
    "@modelcontextprotocol/sdk": "1.25.3",
    "axios": "1.13.4",
    "base64url": "3.0.1",
    "crypto-js": "4.2.0",
    "dayjs": "1.11.19",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "iovalkey": "0.3.3",
    "jsonwebtoken": "9.0.3",
    "pino": "10.3.0",
    "pino-http": "11.0.0",
    "uuid": "13.0.0",
    "yaml": "2.8.2",
    "zod": "3.25.73",
    "zod-to-json-schema": "3.25.1"
  },
  "devDependencies": {
    "@aws-sdk/types": "3.973.1",
    "@commitlint/cli": "20.4.0",
    "@commitlint/config-conventional": "20.4.0",
    "@eslint/js": "9.39.2",
    "@types/bun": "1.3.8",
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/uuid": "11.0.0",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "branch-name-lint": "3.0.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "pino-pretty": "13.1.3",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "bun": ">=1.3.8"
  },
  "packageManager": "bun@1.3.8"
}
