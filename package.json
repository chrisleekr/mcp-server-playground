{
  "name": "@chrisleekr/mcp-server-playground",
  "version": "1.0.2",
  "description": "A playground for Model Context Protocol (MCP) server built with TypeScript and Streamable HTTP transport",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "license": "MIT",
  "bin": {
    "mcp-server-playground": "dist/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "rspack build",
    "postinstall": "husky .husky || true",
    "postbuild": "./scripts/post-build.sh",
    "dev": "nodemon -r dotenv/config --exec tsx src/index.ts | pino-pretty",
    "dev:rspack": "concurrently \"rspack build --watch\" \"nodemon -r dotenv/config dist/index.js | pino-pretty\"",
    "dev:setup": "./scripts/dev-setup.sh",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.jest.json jest --logHeapUsage",
    "test:watch": "jest --watch",
    "test:inspector": "npx -y @modelcontextprotocol/inspector --config ./mcp-config.json --server mcp-server-playground-cursor",
    "docker:build": "docker build -t mcp-server-playground:local . --progress=plain",
    "docker:run": "./scripts/docker-run.sh"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "boilerplate",
    "server",
    "anthropic",
    "oauth",
    "auth0"
  ],
  "author": "Chris Lee <git@chrislee.kr>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisleekr/mcp-server-playground.git"
  },
  "bugs": {
    "url": "https://github.com/chrisleekr/mcp-server-playground/issues"
  },
  "homepage": "https://github.com/chrisleekr/mcp-server-playground#readme",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "3.975.0",
    "@aws-sdk/client-cloudwatch-logs": "3.975.0",
    "@aws-sdk/client-ecs": "3.975.0",
    "@aws-sdk/client-s3": "3.975.0",
    "@aws-sdk/credential-provider-node": "3.972.1",
    "@aws-sdk/credential-providers": "3.975.0",
    "@modelcontextprotocol/sdk": "1.25.3",
    "axios": "1.13.2",
    "base64url": "3.0.1",
    "crypto-js": "4.2.0",
    "dayjs": "1.11.19",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "iovalkey": "0.3.3",
    "jsonwebtoken": "9.0.3",
    "pino": "10.3.0",
    "pino-http": "11.0.0",
    "uuid": "13.0.0",
    "yaml": "2.8.2",
    "zod": "3.25.73",
    "zod-to-json-schema": "3.25.1"
  },
  "devDependencies": {
    "@aws-sdk/types": "3.973.0",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@eslint/js": "9.39.2",
    "@rspack/cli": "1.7.3",
    "@rspack/core": "1.7.3",
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "25.0.10",
    "@types/supertest": "6.0.3",
    "@types/uuid": "11.0.0",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "branch-name-lint": "3.0.1",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "lint-staged": "16.2.7",
    "nodemon": "3.1.11",
    "pino-pretty": "13.1.3",
    "prettier": "3.8.1",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=22.17.0"
  },
  "volta": {
    "node": ">=22.17.0",
    "npm": ">=11.5.2"
  }
}
