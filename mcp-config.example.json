{
  "mcpServers": {
    "mcp-server-playground-inspector": {
      "type": "streamable-http",
      "url": "http://0.0.0.0:3000/mcp"
    },
    "mcp-server-playground-cursor": {
      "type": "http",
      "url": "http://0.0.0.0:3000/mcp"
    },
    "mcp-server-playground-claude": {
      "command": "bunx",
      "args": [
        "-y",
        "mcp-remote",
        "http://0.0.0.0:3000/mcp",
        "--allow-http",
        "--transport",
        "http-only",
        "--debug"
      ],
      "env": {
        "PATH": "~/.bun/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
      }
    }
  }
}
